{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	{% for categorie in categories %}
		<section>
			<div class="container">
				<div class="d-flex align-items-center flex-row">
					<h2 class="mr-auto">{{categorie.catégories}}</h2>
					<button class="btn">Voir tout</button>
				</div>

				<hr class="hr">
				<ul class="d-flex flex-row list-unstyled">
					{% for produit in categorie.produits %}
						<li class="w-100 m-2">
							<div class="col-sm-3 col-lg-2 w-100">
								<div class="card shadow">
									<img src="https://picsum.photos/286/180" class="card-img-top" alt="Random"/>
									<div class="card-body">
										<h5 class="text-center fw-bold">{{produit.nom}}</h5>
										<p class="text-muted small">Lorem ipsum dolor sit amet, consectetur adipisicing elit.
																																															Quos
																																															quod
																																															quibusdam cumque rem accusamus, aperiam excepturi unde, voluptate
																																															quidem
																																															ipsam
																																															velit
																																															quisquam vel voluptatibus, quae molestiae fugiat.
										</p>
										<hr>
										<p class="text-dark mb-0 text-center">
											<strong>{{produit.prix}}€</strong>
										</p>

										<div class="d-flex justify-content-between mb-2">
											<p class="text-error mb-0 text-center">Plus que
												<span class="fw-bold">6</span>
												articles en stock !
											</p>
										</div>
									</div>
								</div>
							</div>
						</li>
					{% endfor %}

				</ul>
				<a class="carousel-control-next" href="#myCarousel" data-slide="next">
					<i class="fa fa-angle-right"></i>
				</a>
			</div>
		{% endfor %}
	</section>
</section>{% endblock %}
