{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}
{% block stylesheets %}

    {{ parent() }}
    <style>
        .form-design{
            display: grid;
            place-items: center;
            color: #000;
            font-family: Inter, serif;

        }

        .form-design input{
            width: 250px;
            height: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
        }
        .form-design button{
            width: 250px;
            height: 40px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
            background-color: #000;
            color: white;
            font-weight: bold;
        }
        .form-design button:hover{
            background-color: #fff;
            color: black;
            border: 1px solid #000;
        }
    </style>
{% endblock %}

{% block body %}

<div class="form-design">
<h1>Profil</h1>
                {{ form(form) }}
</div>

{% endblock %}
